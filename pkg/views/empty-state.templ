package views

templ EmptyState(icon string, title string, description string) {
	<div class="flex flex-col items-center justify-center min-h-[400px] p-8 text-center">
		<div class="mb-4">
			@Icon(icon, "w-16 h-16 text-gray-400 dark:text-gray-500")
		</div>
		<h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">{ title }</h3>
		<p class="text-gray-500 dark:text-gray-400 max-w-md">{ description }</p>
	</div>
}
